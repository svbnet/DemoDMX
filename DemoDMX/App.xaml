<Application x:Class="DemoDMX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DemoDMX"
             StartupUri="Windows/ConfigWindow.xaml">
    <Application.Resources>
         <Style x:Key="RowKey" TargetType="TextBlock">
             <Setter Property="TextAlignment" Value="Right" />
             <Setter Property="Margin" Value="0,0,5,10" />
         </Style>
        <Style x:Key="RowValue" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <Style x:Key="IlKey" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,5,0" />
        </Style>
        <Style x:Key="IlValue" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="MinWidth" Value="50" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5,0" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
    </Application.Resources>
</Application>
